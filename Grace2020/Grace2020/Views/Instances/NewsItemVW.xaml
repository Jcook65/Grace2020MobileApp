<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Grace2020.Views.Instances.NewsItemVW"
             xmlns:ff="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             BackgroundColor="{DynamicResource NavigationPrimary}">
    <!--<ContentView.MinimumHeightRequest>
        <OnPlatform x:TypeArguments="x:Double" iOS="500" Android="-1"/>
    </ContentView.MinimumHeightRequest>-->
    <ContentView.Content>
        <Frame CornerRadius="20"
               BackgroundColor="{DynamicResource NavigationSecondary}"
               Margin="20, 10"
               IsClippedToBounds="True"
               HasShadow="True">
            <Grid RowSpacing="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="70*"/>
                    <RowDefinition Height="30*"/>
                </Grid.RowDefinitions>
                <Frame Padding="0"
                       HorizontalOptions="Center"
                       VerticalOptions="Fill"
                       CornerRadius="20"
                       HasShadow="False"
                       IsClippedToBounds="True"
                       Margin="0,0,0,10">
                    <ff:CachedImage x:Name="newsImage"
                                    RetryDelay="600"
                                    LoadingPlaceholder="loadingImage.jpg"
                                    FadeAnimationForCachedImages="False"
                                    HorizontalOptions="Fill"
                                    VerticalOptions="Fill">
                        <ff:CachedImage.Aspect>
                            <OnPlatform x:TypeArguments="Aspect">
                                <On Platform="Android" Value="AspectFit"/>
                                <On Platform="iOS" Value="AspectFill"/>
                            </OnPlatform>
                        </ff:CachedImage.Aspect>
                        <ff:CachedImage.HeightRequest>
                            <OnPlatform x:TypeArguments="x:Double" iOS="{OnIdiom Phone=-1, Tablet=400}" Android="-1"/>
                        </ff:CachedImage.HeightRequest>
                    </ff:CachedImage>
                </Frame>

                <StackLayout Grid.Row="1"
                             HorizontalOptions="Start"
                             VerticalOptions="Center">
                    <Label Text="{Binding Title}"
                           TextTransform="Uppercase"
                           Style="{DynamicResource LabelHeader1Style}"
                           TextColor="{DynamicResource DarkTextColor}"/>
                    <Label Text="{Binding FormattedDate}"
                           Style="{DynamicResource LabelHeader3Style}"
                           FontSize="16"
                           TextColor="{DynamicResource DarkTextColor}"/>
                </StackLayout>
            </Grid>
        </Frame>
