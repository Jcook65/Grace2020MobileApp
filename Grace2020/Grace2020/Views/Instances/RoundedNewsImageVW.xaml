<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Grace2020.Views.Instances.RoundedNewsImageVW"
             xmlns:ff="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             xmlns:fftransform="clr-namespace:FFImageLoading.Transformations;assembly=FFImageLoading.Transformations">
    <ContentView.Content>
        <Frame Padding="0"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               CornerRadius="20"
               IsClippedToBounds="True"
               Margin="2">
            <ff:CachedImage LoadingPlaceholder="loadingImage.jpg"
                            CacheType="Memory"
                            FadeAnimationEnabled="True"
                            FadeAnimationDuration="200"
                            FadeAnimationForCachedImages="False"
                            TransformPlaceholders="True"
                            x:Name="newsImage"
                            Aspect="AspectFit"
                            HorizontalOptions="Fill"
                            VerticalOptions="Fill">
                <!--<ff:CachedImage.Transformations>
                    <fftransform:CornersTransformation CornersTransformType="AllRounded"
                                                       CropHeightRatio="0"
                                                       CropWidthRatio="0"
                                                       TopLeftCornerSize="20"
                                                       TopRightCornerSize="20"
                                                       BottomLeftCornerSize="20"
                                                       BottomRightCornerSize="20"/>
                </ff:CachedImage.Transformations>-->
            </ff:CachedImage>            
        </Frame>

    </ContentView.Content>
</ContentView>